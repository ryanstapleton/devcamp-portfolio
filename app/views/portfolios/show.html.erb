<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image, "main"), width: '100%' %>

      <% if logged_in?(:site_admin) %>
        <div class="edit-button">
          <%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: 'btn btn-primary' %>
          <%= link_to 'Delete', portfolio_path(@portfolio_item), method: :delete, class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <hr>

      <em><%= @portfolio_item.subtitle %></em>

      <p><%= markdown @portfolio_item.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>